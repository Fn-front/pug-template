  "devDependencies": {
    "@markuplint/pug-parser": "3.12.0",
    "autoprefixer": "10.4.16",
    "browser-sync": "3.0.2",
    "copy-webpack-plugin": "12.0.2",
    "cpx": "1.5.0",
    "markuplint": "3.15.0",
    "npm-run-all": "4.1.5",
    "onchange": "7.1.0",
    "pug": "3.0.2",
    "pug-cli": "github:pugjs/pug-cli#master",
    "smooth-scroll": "16.1.3",
    "webpack": "5.89.0",
    "webpack-cli": "5.1.4",
    "webpack-fix-style-only-entries": "0.6.1"
  }
